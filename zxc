#!/bin/bash
# Complete Docker + NVIDIA + trainer Installation - NON-INTERACTIVE VERSION
# For Azure Batch account start task
# Enhanced monitoring with CPU/GPU percentage display

set -e # Exit on any error

# Configuration
IMAGE="docker.io/riccorg/ai2pytochcpugpu:latest"
CONTAINER_NAME="ai-trainer"
MONITOR_LOG="/var/log/system-status.log"

# Docker credentials - MUST be set as environment variables in Azure Batch
DOCKER_USERNAME="${DOCKER_USERNAME:-}"
DOCKER_PASSWORD="${DOCKER_PASSWORD:-}"
DOCKER_REGISTRY="docker.io"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

print_info() { echo -e "${GREEN}[INFO]${NC} $1"; }
print_warning() { echo -e "${YELLOW}[WARNING]${NC} $1"; }
print_error() { echo -e "${RED}[ERROR]${NC} $1"; }
print_monitor() { echo -e "${CYAN}[MONITOR]${NC} $1"; }

# ========== ERROR CLEANUP ==========
# Only cleanup on error signals, NOT on normal exit
trap 'cleanup_error' SIGINT SIGTERM SIGQUIT ERR

cleanup_error() {
    print_error "Script interrupted or failed. Cleaning up..."
    
    # Stop monitor if running (only on error)
    if [ -f /var/run/system-monitor.pid ]; then
        MONITOR_PID=$(cat /var/run/system-monitor.pid)
        if kill -0 "$MONITOR_PID" 2>/dev/null; then
            kill "$MONITOR_PID"
            print_info "Stopped monitoring daemon"
        fi
        sudo rm -f /var/run/system-monitor.pid
    fi
    
    # Clear Docker credentials from memory
    unset DOCKER_USERNAME
    unset DOCKER_PASSWORD
    
    exit 1
}

# ========== DOCKER LOGIN WITH VERIFICATION ==========
docker_login_and_verify() {
    print_info "Attempting Docker login..."
    
    if [[ -z "$DOCKER_USERNAME" || -z "$DOCKER_PASSWORD" ]]; then
        print_warning "Docker credentials not provided. You may hit pull rate limits."
        print_warning "Set DOCKER_USERNAME and DOCKER_PASSWORD environment variables to avoid this."
        return 1
    fi
    
    print_info "Logging in to Docker Hub as $DOCKER_USERNAME..."
    
    # Login to Docker
    if echo "$DOCKER_PASSWORD" | sudo docker login "$DOCKER_REGISTRY" \
        --username "$DOCKER_USERNAME" \
        --password-stdin; then
        print_info "âœ… Docker login successful!"
        
        # Verify login was actually successful
        if sudo docker info 2>/dev/null | grep -q "Username: $DOCKER_USERNAME"; then
            print_info "âœ… Docker login verified!"
            return 0
        else
            print_error "âš ï¸ Docker login appears unsuccessful - cannot verify credentials"
            return 1
        fi
    else
        print_error "âŒ Docker login failed!"
        return 1
    fi
}

# ========== VERIFIED DOCKER PULL ==========
docker_pull_verified() {
    local image=$1
    print_info "Pulling image: $image"
    
    # Verify we're logged in before pulling
    if ! sudo docker info 2>/dev/null | grep -q "Username:"; then
        print_error "Not logged in to Docker. Attempting login..."
        if ! docker_login_and_verify; then
            print_error "Cannot pull without Docker login. Attempting unauthenticated pull..."
        fi
    fi
    
    MAX_RETRIES=3
    RETRY_COUNT=0
    
    while [ $RETRY_COUNT -lt $MAX_RETRIES ]; do
        print_info "Pull attempt $((RETRY_COUNT + 1)) of $MAX_RETRIES..."
        
        if sudo docker pull "$image"; then
            print_info "âœ… Image pulled successfully!"
            
            # Verify image was actually pulled
            if sudo docker image inspect "$image" > /dev/null 2>&1; then
                print_info "âœ… Image verified locally!"
                return 0
            else
                print_error "Image pulled but not found locally. Something went wrong."
                return 1
            fi
        else
            RETRY_COUNT=$((RETRY_COUNT + 1))
            if [ $RETRY_COUNT -lt $MAX_RETRIES ]; then
                print_warning "Pull failed. Retrying in 10 seconds..."
                sleep 10
            else
                print_error "âŒ Failed to pull image after $MAX_RETRIES attempts"
                return 1
            fi
        fi
    done
    
    return 1
}

# ========== ENHANCED MONITORING WITH REAL-TIME PERCENTAGES ==========
create_enhanced_monitoring_script() {
    print_info "Creating enhanced monitoring script with real-time CPU/GPU percentages..."
    
    sudo tee /usr/local/bin/enhanced-system-monitor > /dev/null << 'EOF'
#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
NC='\033[0m'

print_monitor() { echo -e "${CYAN}[MONITOR]${NC} $1"; }

# Function to get CPU usage percentage
get_cpu_percentage() {
    # Get CPU usage using top command
    local cpu_usage=$(top -bn1 | grep "Cpu(s)" | awk '{print $2}' | cut -d'%' -f1)
    
    # Alternative method using /proc/stat for more accuracy
    local cpu_line=$(head -n1 /proc/stat)
    local cpu_idle=$(echo $cpu_line | awk '{print $5}')
    local cpu_total=0
    
    for val in $cpu_line; do
        cpu_total=$((cpu_total + val))
    done
    
    if [ -n "$prev_cpu_total" ] && [ -n "$prev_cpu_idle" ]; then
        local diff_total=$((cpu_total - prev_cpu_total))
        local diff_idle=$((cpu_idle - prev_cpu_idle))
        local diff_used=$((diff_total - diff_idle))
        
        if [ $diff_total -gt 0 ]; then
            cpu_usage=$(echo "scale=1; 100 * $diff_used / $diff_total" | bc)
        fi
    fi
    
    prev_cpu_total=$cpu_total
    prev_cpu_idle=$cpu_idle
    
    echo "$cpu_usage"
}

# Function to get GPU usage percentage (NVIDIA)
get_gpu_percentage() {
    if command -v nvidia-smi &> /dev/null; then
        # Get GPU utilization percentage
        local gpu_usage=$(nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits 2>/dev/null | head -1 | tr -d ' ')
        
        # Get GPU temperature
        local gpu_temp=$(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader 2>/dev/null | head -1)
        
        # Get GPU memory usage
        local gpu_mem=$(nvidia-smi --query-gpu=utilization.memory --format=csv,noheader,nounits 2>/dev/null | head -1 | tr -d ' ')
        
        # Get GPU name
        local gpu_name=$(nvidia-smi --query-gpu=name --format=csv,noheader 2>/dev/null | head -1)
        
        echo "$gpu_usage,$gpu_temp,$gpu_mem,$gpu_name"
    else
        echo ""
    fi
}

# Function to get memory usage percentage
get_memory_percentage() {
    local mem_total=$(free -m | awk '/^Mem:/{print $2}')
    local mem_used=$(free -m | awk '/^Mem:/{print $3}')
    
    if [ $mem_total -gt 0 ]; then
        local mem_percent=$(echo "scale=1; 100 * $mem_used / $mem_total" | bc)
        echo "$mem_percent,$mem_used,$mem_total"
    else
        echo "0,0,0"
    fi
}

# Function to get disk usage percentage
get_disk_percentage() {
    local disk_percent=$(df -h / | awk 'NR==2 {print $5}' | tr -d '%')
    local disk_used=$(df -h / | awk 'NR==2 {print $3}')
    local disk_total=$(df -h / | awk 'NR==2 {print $2}')
    echo "$disk_percent,$disk_used,$disk_total"
}

# Function to get container status and resource usage
get_container_status() {
    if docker ps --format 'table {{.Names}}' | grep -q ai-trainer; then
        # Get container CPU and memory usage
        local container_stats=$(docker stats ai-trainer --no-stream --format "{{.CPUPerc}}|{{.MemUsage}}" 2>/dev/null || echo "N/A|N/A")
        local cpu_perc=$(echo "$container_stats" | cut -d'|' -f1)
        local mem_usage=$(echo "$container_stats" | cut -d'|' -f2)
        
        # Get container status
        local container_status=$(docker inspect -f '{{.State.Status}}' ai-trainer 2>/dev/null || echo "unknown")
        
        # Get container uptime
        local uptime=$(docker inspect -f '{{.State.StartedAt}}' ai-trainer 2>/dev/null)
        if [ -n "$uptime" ]; then
            local started_seconds=$(date -d "$uptime" +%s)
            local now_seconds=$(date +%s)
            local diff_seconds=$((now_seconds - started_seconds))
            local days=$((diff_seconds / 86400))
            local hours=$(( (diff_seconds % 86400) / 3600 ))
            local minutes=$(( (diff_seconds % 3600) / 60 ))
            
            if [ $days -gt 0 ]; then
                uptime_str="${days}d ${hours}h ${minutes}m"
            elif [ $hours -gt 0 ]; then
                uptime_str="${hours}h ${minutes}m"
            else
                uptime_str="${minutes}m"
            fi
        else
            uptime_str="N/A"
        fi
        
        echo "RUNNING,$cpu_perc,$mem_usage,$container_status,$uptime_str"
    else
        echo "STOPPED,N/A,N/A,N/A,N/A"
    fi
}

# Function to display progress bar
progress_bar() {
    local percent=$1
    local width=20
    local filled=$((percent * width / 100))
    local empty=$((width - filled))
    
    printf "["
    for ((i=0; i<filled; i++)); do printf "â–ˆ"; done
    for ((i=0; i<empty; i++)); do printf " "; done
    printf "] %3d%%" "$percent"
}

# Main monitoring loop
print_monitor "Starting enhanced system monitor..."
print_monitor "Press Ctrl+C to stop monitoring"
echo ""

while true; do
    # Clear screen for real-time display (optional)
    # clear
    
    echo "================================================================================="
    echo "                      REAL-TIME SYSTEM MONITOR - $(date)"
    echo "================================================================================="
    echo ""
    
    # Get CPU usage
    echo -e "${BLUE}CPU USAGE:${NC}"
    cpu_percent=$(get_cpu_percentage)
    echo -n "    Total CPU: "
    progress_bar $cpu_percent
    echo ""
    
    # Get Memory usage
    mem_info=$(get_memory_percentage)
    mem_percent=$(echo "$mem_info" | cut -d',' -f1)
    mem_used=$(echo "$mem_info" | cut -d',' -f2)
    mem_total=$(echo "$mem_info" | cut -d',' -f3)
    
    echo -e "${GREEN}MEMORY USAGE:${NC}"
    echo -n "    Memory: "
    progress_bar $mem_percent
    echo " (${mem_used}MB / ${mem_total}MB)"
    
    # Get Disk usage
    disk_info=$(get_disk_percentage)
    disk_percent=$(echo "$disk_info" | cut -d',' -f1)
    disk_used=$(echo "$disk_info" | cut -d',' -f2)
    disk_total=$(echo "$disk_info" | cut -d',' -f3)
    
    echo -e "${YELLOW}DISK USAGE:${NC}"
    echo -n "    Root FS: "
    progress_bar $disk_percent
    echo " (${disk_used}B / ${disk_total}B)"
    
    # Get GPU usage (if available)
    gpu_info=$(get_gpu_percentage)
    if [ -n "$gpu_info" ]; then
        gpu_percent=$(echo "$gpu_info" | cut -d',' -f1)
        gpu_temp=$(echo "$gpu_info" | cut -d',' -f2)
        gpu_mem=$(echo "$gpu_info" | cut -d',' -f3)
        gpu_name=$(echo "$gpu_info" | cut -d',' -f4)
        
        echo -e "${PURPLE}GPU USAGE:${NC}"
        echo "    GPU: $gpu_name"
        echo -n "    Utilization: "
        progress_bar $gpu_percent
        echo ""
        echo -n "    Memory: "
        progress_bar $gpu_mem
        echo ""
        echo -e "    Temperature: ${gpu_temp}Â°C"
    else
        echo -e "${PURPLE}GPU:${NC} Not detected or not available"
    fi
    
    # Get Container status
    container_info=$(get_container_status)
    container_status=$(echo "$container_info" | cut -d',' -f1)
    container_cpu=$(echo "$container_info" | cut -d',' -f2)
    container_mem=$(echo "$container_info" | cut -d',' -f3)
    container_state=$(echo "$container_info" | cut -d',' -f4)
    container_uptime=$(echo "$container_info" | cut -d',' -f5)
    
    echo -e "${CYAN}CONTAINER STATUS:${NC}"
    if [ "$container_status" = "RUNNING" ]; then
        echo -e "    Status: ${GREEN}RUNNING${NC} (${container_state})"
        echo "    Uptime: $container_uptime"
        echo "    CPU: $container_cpu"
        echo "    Memory: $container_mem"
    else
        echo -e "    Status: ${RED}STOPPED${NC}"
    fi
    
    echo ""
    echo "================================================================================="
    echo "Refreshing in 5 seconds... (Last update: $(date +%H:%M:%S))"
    echo "================================================================================="
    
    # Wait 5 seconds before next update
    sleep 5
done
EOF
    
    sudo chmod +x /usr/local/bin/enhanced-system-monitor
}

# ========== START ENHANCED MONITORING ==========
start_enhanced_monitoring() {
    print_info "Starting enhanced system monitor with real-time display..."
    create_enhanced_monitoring_script
    
    # Start monitoring in background with nohup
    nohup /usr/local/bin/enhanced-system-monitor >> "$MONITOR_LOG" 2>&1 &
    MONITOR_PID=$!
    echo $MONITOR_PID | sudo tee /var/run/system-monitor.pid > /dev/null
    
    print_info "âœ… Enhanced monitor started (PID: $MONITOR_PID)"
    print_info "ðŸ“Š Real-time monitoring active. Check logs: tail -f $MONITOR_LOG"
    print_info "To view real-time output: sudo /usr/local/bin/enhanced-system-monitor"
    
    # Show initial output
    sleep 2
    echo ""
    print_info "Initial system status:"
    tail -n 20 "$MONITOR_LOG" 2>/dev/null | grep -A 20 "REAL-TIME SYSTEM MONITOR" || true
}

# ========== NVIDIA DRIVER INSTALLATION ==========
install_nvidia_drivers() {
    print_info "Installing NVIDIA drivers..."
    
    echo "debconf debconf/frontend select noninteractive" | sudo debconf-set-selections
    sudo ubuntu-drivers autoinstall
    
    if [ $? -ne 0 ]; then
        print_warning "ubuntu-drivers autoinstall failed, trying manual method..."
        RECOMMENDED=$(ubuntu-drivers list | grep -o "nvidia-driver-[0-9]\+" | head -1)
        
        if [ -n "$RECOMMENDED" ]; then
            sudo apt-get install -yq "$RECOMMENDED"
        else
            print_error "Could not determine NVIDIA driver to install"
            return 1
        fi
    fi
    
    if modinfo nvidia > /dev/null 2>&1; then
        print_info "âœ… NVIDIA drivers installed successfully"
        return 0
    else
        print_error "âŒ NVIDIA driver installation failed"
        return 1
    fi
}

# ========== MAIN INSTALLATION ==========
install_everything() {
    print_info "=== STEP 1: INSTALLING DOCKER ==="
    export DEBIAN_FRONTEND=noninteractive
    sudo apt-get update -yq
    sudo apt-get upgrade -yq
    sudo apt-get install -yq docker.io docker-compose-v2 bc
    sudo systemctl start docker
    sudo systemctl enable docker
    
    # Login to Docker FIRST
    docker_login_and_verify
    
    if lspci | grep -i nvidia > /dev/null; then
        print_info "=== STEP 2: INSTALLING NVIDIA DRIVERS ==="
        sudo apt-get install -yq ubuntu-drivers-common
        
        if install_nvidia_drivers; then
            print_info "=== STEP 3: INSTALLING NVIDIA CONTAINER TOOLKIT ==="
            distribution=$(. /etc/os-release;echo $ID$VERSION_ID)
            curl -fsSL https://nvidia.github.io/libnvidia-container/gpgkey | sudo gpg --dearmor -o /usr/share/keyrings/nvidia-container-toolkit-keyring.gpg
            curl -s -L "https://nvidia.github.io/libnvidia-container/$distribution/libnvidia-container.list" | \
                sed 's#deb https://#deb [signed-by=/usr/share/keyrings/nvidia-container-toolkit-keyring.gpg] https://#g' | \
                sudo tee /etc/apt/sources.list.d/nvidia-container-toolkit.list > /dev/null
            
            sudo apt-get update -yq
            sudo apt-get install -yq nvidia-container-toolkit
            
            print_info "=== STEP 4: CONFIGURING DOCKER FOR NVIDIA ==="
            sudo nvidia-ctk runtime configure --runtime=docker
            sudo systemctl restart docker
            
            REBOOT_NEEDED=true
        else
            print_warning "NVIDIA driver installation failed. Continuing without GPU support."
            REBOOT_NEEDED=false
        fi
    else
        print_warning "No NVIDIA GPU detected. Skipping NVIDIA driver installation."
        REBOOT_NEEDED=false
    fi
    
    print_info "âœ… All tools installed."
    
    # Start enhanced monitoring
    start_enhanced_monitoring
    
    if [ "$REBOOT_NEEDED" = true ]; then
        print_info "Scheduling reboot in 1 minute for NVIDIA drivers..."
        echo "curl -s https://raw.githubusercontent.com/max313iq/Ssl/refs/heads/main/docker_nvidia_install.sh | sudo bash -s post-reboot" | sudo at now + 1 minute
        print_info "System will reboot in 1 minute."
        exit 0
    else
        run_trainer
    fi
}

# ========== POST-REBOOT ==========
post_reboot() {
    print_info "=== POST-REBOOT SETUP ==="
    sleep 30
    until systemctl is-active --quiet docker; do
        sleep 5
    done
    
    # Login to Docker AGAIN after reboot
    docker_login_and_verify
    
    # Restart enhanced monitoring
    if [ ! -f /var/run/system-monitor.pid ] || ! ps -p $(cat /var/run/system-monitor.pid) > /dev/null 2>&1; then
        start_enhanced_monitoring
    fi
    
    run_trainer
}

# ========== RUN TRAINER WITH VERIFIED PULL ==========
run_trainer() {
    print_info "=== STARTING trainer CONTAINER ==="
    
    # VERIFIED Docker pull (with login check)
    if ! docker_pull_verified "$IMAGE"; then
        print_error "âŒ Failed to pull Docker image. Cannot start container."
        return 1
    fi
    
    # Remove existing container if present
    sudo docker stop "$CONTAINER_NAME" 2>/dev/null || true
    sudo docker rm "$CONTAINER_NAME" 2>/dev/null || true
    
    # Run container with appropriate GPU support
    if command -v nvidia-smi &> /dev/null && nvidia-smi > /dev/null 2>&1; then
        print_info "Starting with NVIDIA GPU support..."
        sudo docker run -d \
          --gpus all \
          --restart unless-stopped \
          --name "$CONTAINER_NAME" \
          "$IMAGE"
    else
        print_info "Starting without GPU support..."
        sudo docker run -d \
          --restart unless-stopped \
          --name "$CONTAINER_NAME" \
          "$IMAGE"
    fi
    
    # Verify container is running
    sleep 3
    if sudo docker ps --format '{{.Names}}' | grep -q "$CONTAINER_NAME"; then
        print_info "âœ… trainer container started successfully!"
        
        # Show container status in monitoring format
        echo ""
        print_info "Container Status Summary:"
        sudo docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Ports}}" | grep "$CONTAINER_NAME"
        
        # Show initial logs
        print_info "Initial container logs:"
        sudo docker logs --tail 5 "$CONTAINER_NAME"
    else
        print_error "âŒ Container failed to start!"
        sudo docker logs "$CONTAINER_NAME" 2>/dev/null || true
        return 1
    fi
}

# ========== MAIN EXECUTION ==========
main() {
    print_info "Starting Azure Batch setup script..."
    
    if [ "$1" = "post-reboot" ]; then
        post_reboot
    elif [ "$1" = "install-only" ]; then
        install_everything
    elif [ "$1" = "start-only" ]; then
        docker_login_and_verify
        run_trainer
    else
        # Default Azure Batch mode
        if command -v docker &> /dev/null && systemctl is-active --quiet docker; then
            print_info "Docker already installed and running."
            docker_login_and_verify
            
            if sudo docker ps --format '{{.Names}}' | grep -q "$CONTAINER_NAME"; then
                print_info "Container $CONTAINER_NAME is already running."
            else
                print_info "Starting trainer container..."
                run_trainer
            fi
            
            start_enhanced_monitoring
        else
            install_everything
        fi
    fi
    
    print_info "âœ… Setup complete. Enhanced monitoring is active."
    print_info "ðŸ“Š View real-time monitoring: sudo /usr/local/bin/enhanced-system-monitor"
    print_info "ðŸ“‹ Container logs: sudo docker logs -f $CONTAINER_NAME"
    print_info "ðŸ“„ System logs: tail -f $MONITOR_LOG"
    
    # Keep script alive for Azure Batch
    if [ "$1" = "batch-mode" ] || [ -z "$1" ]; then
        print_info "Running in Azure Batch mode - keeping script alive..."
        while true; do
            sleep 3600
        done
    fi
}

# ========== COMMAND LINE HANDLER ==========
if [[ "${BASH_SOURCE[0]}" = "${0}" ]]; then
    case "$1" in
        "install")
            install_everything
            ;;
        "start")
            docker_login_and_verify
            run_trainer
            ;;
        "login")
            docker_login_and_verify
            ;;
        "monitor")
            start_enhanced_monitoring
            ;;
        "live-monitor")
            # Run monitor in foreground for live viewing
            create_enhanced_monitoring_script
            /usr/local/bin/enhanced-system-monitor
            ;;
        "post-reboot")
            post_reboot
            ;;
        "logs")
            sudo docker logs -f "$CONTAINER_NAME"
            ;;
        "status")
            sudo docker ps -a | grep "$CONTAINER_NAME"
            ;;
        "stop")
            sudo docker stop "$CONTAINER_NAME"
            ;;
        "batch-mode")
            main "batch-mode"
            ;;
        *)
            main "$@"
            ;;
    esac
fi
